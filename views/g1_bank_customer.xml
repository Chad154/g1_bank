<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_g1_customer_tree" model="ir.ui.view">
            <field name="name">g1.customer.tree</field>
            <field name="model">g1.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>
        <record id="view_g1_customer_form" model="ir.ui.view">
            <field name="name">g1.customer.form</field>
            <field name="model">g1.customer</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="middle_initial"/>
                            </group>

                            <group>
                                <field name="street"/>
                                <field name="state"/>
                                <field name="zip"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>

                            <group>
                                <field name="password" password="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_g1_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">g1.customer</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_g1_root" name="G1 Bank"/>
        <menuitem id="menu_g1_customer"
                  name="Customers"
                  parent="menu_g1_root"
                  action="action_g1_customer"/>

    </data>
</odoo>
