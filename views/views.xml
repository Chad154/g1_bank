<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="g1_bank.list">
            <field name="name">g1_bank list</field>
            <field name="model">g1.bank</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>
    
    
        <record id="view_g1_customer_tree" model="ir.ui.view">
            <field name="name">g1.customer.tree</field>
            <field name="model">g1.customer</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="name"/>
                    <field name="last_name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="state"/>
                    <field name="zip"/>
                </tree>
            </field>
        </record>



