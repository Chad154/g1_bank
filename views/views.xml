<odoo>
    <data>
        <record id="g1_account_tree" model="ir.ui.view">
            <field name="name">g1.account.tree</field>
            <field name="model">g1.account</field>
            <field name="arch" type="xml">
                <tree string="Cuentas">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="account_type"/>
                    <field name="credit_line"/>
                    <field name="opening_date"/>
                    <field name="begin_balance"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>
        <record id="g1_account_search" model="ir.ui.view">
            <field name="name">g1.account.search</field>
            <field name="model">g1.account</field>
            <field name="arch" type="xml">
                <search string="Buscar Cuentas">
                    <field name="name"/>
                    <field name="description"/>

                    <separator/>

                    <filter string="Cuentas Estándar" name="type_standard" domain="[('account_type', '=', 'standard')]"/>
                    <filter string="Cuentas de Crédito" name="type_credit" domain="[('account_type', '=', 'credit')]"/>

                    <group expand="0" string="Agrupar Por">
                        <filter string="Tipo de Cuenta" name="group_by_type" context="{'group_by': 'account_type'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>